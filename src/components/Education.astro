---
import SchoolIcon from "../icons/SchoolIcon.astro";
import CalendarIcon from "../icons/CalendarIcon.astro";
import CertificateIcon from "../icons/CertificateIcon.astro";
import type { Education } from "./types/types";

interface Props {
  education: Education[];
}

const { education } = Astro.props;
---

<section id="Education" class="flex flex-col gap-4 animate-fadeIn mb-20">
  <h1 class="text-3xl font-bold mb-6 dark:text-white">
    Education
  </h1>
  <div class="flex flex-col gap-4">
    {education.map(education => (
      <article class="flex flex-row gap-4 rounded-2xl p-4 hover:shadow-2xl hover:bg-[#1f938f18] hover:scale-101 transition-all duration-200">
        <div class="flex items-center border-gray-700 rounded-full p-3 mt-1 bg-[#179b978c] dark:bg-[#1f938f4a] text-white h-fit w-fit">
          <SchoolIcon class="h-8 w-8"/> 
        </div>
        <div class="flex flex-col gap-2">
          <h2 class="text-xl font-bold dark:text-gray-200">
            {education.title}
          </h2>
          <p class="text-base text-[#31b9b4]">  
            {education.school}
          </p>
          <p class="text-base text-gray-500 dark:text-gray-400 flex flex-row gap-2 items-center">
            <CalendarIcon class="h-4 w-4"/>
            {education.startDate} - {education.endDate}
          </p>
          <ul>
            <li class="flex flex-row gap-2 items-center text-gray-700 dark:text-gray-400">
              {education.description}
            </li>
          </ul>

        </div>
      </article>
    ))}

  </div>
</section>
