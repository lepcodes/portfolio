---
import type { TechnologyType } from './types/tech_types';
import { Technology } from './types/tech_types';

interface Props {
    tech: TechnologyType;
}

const { tech } = Astro.props;
const { name, color, icon: Icon } = Technology[tech];
---

<div class="flex flex-row items-center gap-2 rounded-md w-fit px-2 py-1 text-xs" style={`background-color: ${color+'30'}`}>
    <Icon className="w-3 h-3" style={{color: color}}/>
    <h1 style={`color: ${color}`} class="font-bold">{name}</h1>
</div>