---
import ExternalLinkIcon from "../icons/ExternalLinkIcon.astro";
import type { Experience } from "./types/types";

interface Props {
  experience: Experience;
}

const { experience } = Astro.props;
---

<li class="flex gap-4 md:p-4 rounded-2xl hover:shadow-xl hover:dark:bg-[#4a4a4a26] hover:bg-[#58585818] hover:scale-101 transition-all duration-200">
    <a 
    href={experience.url} 
    target="_blank" 
    class="flex flex-col md:flex-row gap-2"
    >
        <time class="md:w-[20%] text-gray-500 text-base mt-1">
            {experience.startDate} - {experience.endDate}
        </time>
        <div class="flex flex-col md:w-[80%]">
            <h3 class="text-lg font-bold mb-1">
                {experience.title}
            </h3>
            <div class="hoverable group w-fit h-full flex flex-row items-center gap-1 text-base font-bold mb-2">
                <h4 class="font-bold text-[#31b9b4] transition-all duration-200">
                    {experience.company}
                </h4>
                <ExternalLinkIcon class="h-4 w-4 group-hover:text-[#31b9b4] group-hover:scale-125 transition-all duration-200"/>
            </div>
            <p class="prose dark:prose-invert font-normal text-[14px] text-gray-700 dark:text-gray-400">
                {experience.description}
            </p>
        </div>
    </a>
</li>