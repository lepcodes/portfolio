---
import ExternalLinkIcon from "../icons/ExternalLinkIcon.astro";
const { experience } = Astro.props;
---

<li class="flex group gap-4 md:p-4 rounded-2xl hover:shadow-xl hover:bg-[#1f938f26] hover:scale-101 transition-all duration-200">
    <a 
    href={experience.url} 
    target="_blank" 
    class="flex flex-col md:flex-row gap-2"
    >
        <time class="md:w-[20%] text-gray-500 text-base mt-1">
            {experience.startDate} - {experience.endDate}
        </time>
        <div class="flex flex-col md:w-[80%]">
            <h3 class="text-xl font-bold">
                {experience.title}
            </h3>
            <div class="flex flex-row items-center gap-1 text-base font-bold mb-2">
                <h4 class="font-bold text-[#31b9b4]">
                    {experience.company}
                </h4>
                <ExternalLinkIcon class="h-4 w-4 group-hover:text-[#31b9b4] group-hover:scale-110 transition-all duration-200"/>
            </div>
            <p class="text-base text-gray-700 dark:text-gray-400">
                {experience.description}
            </p>
        </div>
    </a>
</li>