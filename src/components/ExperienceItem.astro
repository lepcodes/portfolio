---
const { experience } = Astro.props;
---

<li class="flex gap-8">
    <time class="w-[20%] text-gray-500">
        {experience.startDate} - {experience.endDate}
    </time>
    <div class="flex flex-col w-[80%]">
        <h3 class="text-xl font-bold prose dark:prose-invert">
            {experience.title}
        </h3>
        <h4 class="text-md font-bold dark:text-cyan-400 mb-2">
            {experience.company}
        </h4>
        <p class="porse dark:prose-invert text-md text-gray-500">
            {experience.description}
        </p>
    </div>

</li>